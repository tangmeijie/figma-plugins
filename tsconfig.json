{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "typeRoots": ["node_modules/@types", "node_modules/@figma"]
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "plugins/**/*"
  ]
} 